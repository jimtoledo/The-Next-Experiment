function inv_display()
	--key item
	rect(2,116,11,125,10)
	spr(curr_key_item,3,117)
	--puzzle pieces
	local x = 14
	for n in pairs(collected_pieces) do
		rect(x,116,x+9,125,7)
		spr(n,x+1,117)
		x+=9
	end
	
end
